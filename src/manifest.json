{
  "manifest_version": 3,
  "name": "KontenManager",
  "version": "2026.0.3.1",
  "default_locale": "de",
  "author": "Martin Berner",
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "64": "assets/icon64.png"
  },
  "action": {
    "default_icon": {
      "64": "assets/icon64.png"
    },
    "default_title": "KontenManager",
    "default_area": "navbar"
  },
  "background": {
    "scripts": ["entrypoints/background.js"],
    "type": "module"
  },
  "permissions": ["downloads", "notifications", "storage", "tabs"],
  "host_permissions": [
    "https://www.tradegatebsx.com/*",
    "https://www.tradegate.de/*",
    "https://*.finanzen.net/*",
    "https://fx-rate.net/*",
    "https://www.goyax.de/*",
    "https://www.wallstreet-online.de/*",
    "https://m.aktiencheck.de/*",
    "https://www.tagesschau.de/wirtschaft/boersenkurse/*"
  ],
  "options_ui": {
    "browser_style": false,
    "open_in_tab": false,
    "page": "entrypoints/options.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "kontenmanager@gmx.de",
      "strict_min_version": "145.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  }
}
