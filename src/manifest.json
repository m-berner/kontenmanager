{
  "manifest_version": 3,
  "name": "KontenManager",
  "version": "2026.0.0.1",
  "author": "Martin Berner",
  "icons": {
    "64": "assets/icon64.png"
  },
  "action": {
    "default_icon": {
      "64": "assets/icon64.png"
    },
    "default_title": "KontenManager"
  },
  "background": {
    "scripts": [
      "pages/background.js"
    ]
  },
  "permissions": [
    "downloads",
    "notifications",
    "storage"
  ],
  "host_permissions": [
    "https://www.tradegate.de/*",
    "https://*.finanzen.net/*",
    "https://fx-rate.net/*",
    "https://www.goyax.de/*",
    "https://www.wallstreet-online.de/*",
    "https://*.aktiencheck.de/*",
    "https://www.tagesschau.de/*"
  ],
  "options_ui": {
    "browser_style": false,
    "open_in_tab": false,
    "page": "pages/options.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "kontenmanager@gmx.de",
      "strict_min_version": "140.0"
    }
  }
}
