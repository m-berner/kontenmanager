{
  "include": [
    "./src/**/*.js",
    "./src/**/*.ts",
    "./src/**/*.vue",
    "./src/locales/*.json",
    "./src/assets/**/*.png",
    "./vite.config.ts",
    "./src/**/*.css"
  ],
  "exclude": [
    "./node_modules",
    "./build",
    "./dist",
    "./docs",
    "./.yarn",
    "./yarnrc.yml",
    "./.idea",
    "./public",
    "./releases",
    "./resources",
    "./kontenmanager@gmx.de"
  ],
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "module": "esnext",
    "target": "es2022",
    "useDefineForClassFields": true,
    "outDir": "./src",
    "removeComments": true,
    "sourceMap": false,
    "emitDeclarationOnly": false,
    "declarationMap": false,
    "declaration": false,
    "downlevelIteration": false,
    "skipLibCheck": true,
    "allowJs": true,
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "types": [
      "node",
      "@types/firefox-webext-browser",
      "@types/firefox",
      "@types/chrome",
      "@types/web"
    ],
    /* Bundler mode */
    "composite": false,
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": false,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "noEmit": false,
    "noEmitOnError": true,
    "jsx": "preserve",
    /* Linting */
    "strict": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "strictFunctionTypes": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "vueCompilerOption": {
    "target": 3.5
  }
}